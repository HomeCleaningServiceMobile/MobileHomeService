<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa dịch vụ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@color/primary_orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên dịch vụ"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả dịch vụ"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá cơ bản"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_base_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá theo giờ"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_hourly_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời lượng ước tính (phút)"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_estimated_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL hình ảnh"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_image_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textUri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu cầu"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_requirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới hạn"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_restrictions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textMultiLine" />

        <CheckBox
            android:id="@+id/cb_is_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoạt động" />

        <Button
            android:id="@+id/btn_update_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật dịch vụ"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary_orange"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
