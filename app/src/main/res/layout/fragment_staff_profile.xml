                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skills"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/tv_skills"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Plumbing, Electrical, HVAC"
                                android:textAppearance="?attr/textAppearanceBody1" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bio -->
                    <LinearLayout
                        android:id="@+id/layout_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/tv_bio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Experienced technician with 5+ years in home services"
                                android:textAppearance="?attr/textAppearanceBody1" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Date of Birth -->
                    <LinearLayout
                        android:id="@+id/layoutDateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ‚"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/tvDateOfBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jan 15, 1990"
                                android:textAppearance="?attr/textAppearanceBody1" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Gender -->
                    <LinearLayout
                        android:id="@+id/layoutGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="start"
