<?xml version="1.0" encoding="utf-8"?>
<!-- Improved Date/Time/Staff Selection Section -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Section Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Select Date, Time &amp; Staff"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="?attr/colorOnSurface" />

    <!-- Calendar Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Choose Date"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="12dp" />

            <!-- Full Calendar View -->
            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginBottom="8dp"
                android:theme="@style/CalendarViewTheme" />

            <!-- Selected Date Display -->
            <TextView
                android:id="@+id/tv_selected_date_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No date selected"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/rounded_border"
                android:backgroundTint="?attr/colorSurfaceVariant" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Time Slots Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_time_slots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutline"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â° Available Time Slots"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="12dp" />

            <!-- Loading State -->
            <LinearLayout
                android:id="@+id/layout_timeslots_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="20dp"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading available times..."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Horizontal Time Slots RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_time_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                android:paddingHorizontal="4dp" />

            <!-- No Time Slots Available -->
            <LinearLayout
                android:id="@+id/layout_no_timeslots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_time"
                    android:alpha="0.6"
                    android:layout_marginBottom="8dp"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No time slots available"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please select a different date"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Staff Selection Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_staff_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutline"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¨â€ðŸ”§ Select Staff Member"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="12dp" />

            <!-- Selected Staff Display -->
            <LinearLayout
                android:id="@+id/layout_selected_staff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rounded_border"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_worker"
                    android:background="@drawable/circular_image_background"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp"
                    app:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_selected_staff_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tv_selected_staff_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ 4.8 rating"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="?attr/colorPrimary" />

            </LinearLayout>

            <!-- Pick Staff Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pick_staff"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Pick Staff Member"
                android:textSize="16sp"
                app:icon="@drawable/ic_worker"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                app:strokeWidth="2dp" />

            <!-- Staff Loading State -->
            <LinearLayout
                android:id="@+id/layout_staff_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading available staff..."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout> 