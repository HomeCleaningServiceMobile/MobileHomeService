<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm dịch vụ mới"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@color/primary_orange" />

        <EditText
            android:id="@+id/et_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên dịch vụ" />

        <EditText
            android:id="@+id/et_service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả dịch vụ"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_service_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loại dịch vụ (số)"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_base_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá cơ bản"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_hourly_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá theo giờ"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_estimated_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thời lượng ước tính (phút)"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_image_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL hình ảnh"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_requirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yêu cầu"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_restrictions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giới hạn"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btn_submit_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo dịch vụ"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary_orange"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>

