<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="#1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/admin_white"
            android:background="@drawable/circle_primary"
            android:gravity="center"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/admin_text_primary" />

            <TextView
                android:id="@+id/tv_booking_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 bookings"
                android:textSize="12sp"
                android:textColor="@color/admin_text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚«0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/admin_success"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>