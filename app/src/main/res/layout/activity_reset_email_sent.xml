<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Status Bar Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Success Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle"
            android:layout_marginBottom="24dp"
            app:tint="?attr/colorPrimary" />

        <!-- Header -->
        <TextView
            android:id="@+id/tv_reset_email_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_email_sent_title"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_reset_email_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_email_sent_subtitle"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- Spacer to push button to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Go to Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_go_to_login"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/go_to_login_page"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:cornerRadius="16dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView> 